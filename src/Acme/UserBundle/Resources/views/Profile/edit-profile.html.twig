{% stylesheets 'css/bootstrap.css' filter='?yui_css,cssrewrite' %}
<link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen">
{% endstylesheets %}
<style type="text/css">
#fos_user_profile_form .controls{
	margin-left: 0;
} 
#fos_user_profile_form .controls #fos_user_profile_form_user{
	clear: both;
}
#fos_user_profile_form .controls #fos_user_profile_form_user .controls{
	margin-left: 160px;
}
</style>
{% form_theme form theme %}

<form class="thumbnail form-horizontal" action="{{ path('AcmeUserBundle_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
	<fieldset>
	<legend>Hello {{ user.username }}!</legend>

    {{ form_widget(form) }}
   <div class="form-actions">
		<button type="submit" class="btn btn-primary">Save changes</button>
		<a href="{{ path('AcmeUserBundle_profile') }}" class="btn">Cancel</a>
	</div>
	</fieldset>
</form>