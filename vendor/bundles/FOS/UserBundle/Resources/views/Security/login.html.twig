{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
{% if not error is empty %}
<div id="message">
<dd class="error message">{{ error }}</dd>
</div>
{% endif %}
			
	<div class="clearfix">
		<label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
		<div class=="input">
			<input type="text" id="username" name="_username" value="{{ last_username }}" />
		</div>
	</div>

	<div class="clearfix">
		<label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
		<div class=="input">
			<input type="password" id="password" name="_password" />
		</div>
	</div>

	<div class="clearfix">
		<input type="checkbox" id="remember_me" name="_remember_me" value="on" style="margin: 10px;" />
		<label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
	</div>
    <div class="actions">
		<button type="submit" class="btn primary">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
    </div>
</div>
</fieldset>
</form>
{% endblock fos_user_content %}